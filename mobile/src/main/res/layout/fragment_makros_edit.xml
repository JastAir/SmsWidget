<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:background="@drawable/list_item_background"
        android:padding="4dp" android:layout_margin="8dp">

    <view class="com.rengwuxian.materialedittext.MaterialEditText"
          android:id="@+id/makros_edit_phone_input"
          android:transitionName="phone"
          app:met_floatingLabelText="Номер телефона: (+79005552211)"
          app:met_floatingLabelAlwaysShown="true"
          app:met_floatingLabelTextColor="@color/colorAccent"
          app:met_floatingLabel="normal"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          app:layout_constraintStart_toStartOf="parent"
          android:layout_marginStart="8dp"
          app:elevation="8dp"
          app:met_iconLeft="@drawable/png_ic_phone"
          app:met_minCharacters="11"
          android:inputType="phone" android:layout_marginEnd="8dp"
          app:layout_constraintEnd_toStartOf="@+id/add_contact_button" app:layout_constraintHorizontal_bias="0.0"
          android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/makros_edit_name_input"/>

    <view class="com.rengwuxian.materialedittext.MaterialEditText"
          android:id="@+id/makros_edit_name_input"
          android:transitionName="phone"
          app:met_floatingLabelText="Название макроса"
          app:met_floatingLabelAlwaysShown="true"
          app:met_floatingLabelTextColor="@color/colorAccent"
          app:met_helperTextColor="@color/colorPrimaryDark"
          app:met_floatingLabel="normal"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          app:layout_constraintStart_toStartOf="parent"
          android:layout_marginStart="8dp"
          app:elevation="8dp"
          app:met_iconLeft="@drawable/png_ic_info"
          app:met_minCharacters="1"
          android:inputType="text" android:layout_marginEnd="8dp"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginTop="8dp"
          app:layout_constraintTop_toTopOf="parent"/>

    <view class="com.rengwuxian.materialedittext.MaterialEditText"
          android:transitionName="message"
          android:id="@+id/makros_edit_message_input"
          app:met_floatingLabel="normal"
          app:met_floatingLabelText="Сообщение которое необходимо отправить"
          app:met_floatingLabelAlwaysShown="true"
          app:met_floatingLabelTextColor="@color/colorAccent"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginEnd="8dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintHorizontal_bias="0.0"
          app:elevation="8dp"
          android:layout_marginTop="8dp"
          app:layout_constraintTop_toBottomOf="@+id/makros_edit_phone_input"
          app:cardElevation="8dp"
          app:met_clearButton="true"
          app:met_minCharacters="1"
          android:maxLines="5"
          app:met_iconLeft="@drawable/png_ic_message" android:layout_marginStart="8dp"
          app:met_singleLineEllipsis="false"/>
    <ImageButton
            android:layout_width="50dp"
            android:transitionName="icon"
            android:layout_height="50dp" app:srcCompat="@drawable/ic_control_point_white"
            android:id="@+id/add_contact_button"
            app:layout_constraintTop_toTopOf="@+id/makros_edit_phone_input"
            app:layout_constraintBottom_toBottomOf="@+id/makros_edit_phone_input"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:background="@drawable/btn_second_default"
            android:tint="@color/common_google_signin_btn_text_dark_default"/>
</android.support.constraint.ConstraintLayout>